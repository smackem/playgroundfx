<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="net.smackem.fxplayground.mapgen.MapGenController"
            prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="4" left="4" right="4" top="4" />
    </padding>
    <Canvas fx:id="canvas" width="640" height="480" />
    <VBox AnchorPane.rightAnchor="0" spacing="4" alignment="CENTER_RIGHT">
        <Button minWidth="70" text="Smoothen" onAction="#onSmoothen" />
        <Button minWidth="70" text="Sharpen" onAction="#onSharpen" />
        <Button minWidth="70" text="Expand" onAction="#onExpand" />
        <Button minWidth="70" text="Map" onAction="#onMap" />
        <Label text="Seed:" />
        <Button minWidth="70" text="Island" onAction="#onSeedIsland" />
        <Button minWidth="70" text="Mountains" onAction="#onSeedMountains" />
        <Button minWidth="70" text="High Plains" onAction="#onSeedHighPlains" />
        <Button minWidth="70" text="Lakes" onAction="#onSeedLakes" />
        <Button minWidth="70" text="River" onAction="#onSeedRiver" />
        <CheckBox fx:id="renderHintCheckBox" text="Hint" />
    </VBox>
</AnchorPane>
